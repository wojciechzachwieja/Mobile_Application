<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    
    
    <style name="Button" parent="android:Widget.TextView">
        <item name="android:layout_height">@dimen/default_high_button</item>
        <item name="android:textColor">@color/TextWhite</item>
        <item name="android:textSize">@dimen/default_size_text</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="RedButton" parent="Button">
        <item name="android:background">@drawable/normal_red_button</item>
    </style>

    <style name="BlueButton" parent="Button">
        <item name="android:background">@drawable/normal_blue_button</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/default_size_text</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_height">@dimen/default_high_button</item>
        <item name="android:textColor">@color/TextWhite</item>
    </style>
    <style name="Red_Theme_Edit_Text" parent="EditText">
        <item name="android:background">@drawable/edit_text_selector</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/TextWhite</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/TextWhite</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>


    <style name="Red_Theme" parent="@style/Theme.AppCompat">
        <item name="android:buttonStyle">@style/RedButton</item>
        <item name="android:background">@color/BackgoundGray</item>
        <item name="android:textViewStyle">@style/RedButton</item>
        <item name="android:editTextStyle">@style/Red_Theme_Edit_Text</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/TextWhite</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">@color/TextWhite</item>
    </style>

</resources>

